<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment">

    <RadioGroup
        android:id="@+id/rgcoche"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/boton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbcoche1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coche 1" />

        <RadioButton
            android:id="@+id/rbcoche2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coche 2" />

        <RadioButton
            android:id="@+id/rbcoche3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coche 3" />

        <RadioButton
            android:id="@+id/rbmoto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moto 1" />

        <RadioButton
            android:id="@+id/rbmoto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moto 2" />

        <RadioButton
            android:id="@+id/rbmoto3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moto 3" />
    </RadioGroup>

    <Button
        android:id="@+id/boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgcoche"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>